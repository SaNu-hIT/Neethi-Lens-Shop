                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textSize="13dp" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="IGST Total"
                            android:textSize="13dp" />

                        <com.example.work.cartapp.Adapter.MyEditTextMarwen
                            android:id="@+id/IGST_Total"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/background_item"
                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CESS Total"
                            android:textSize="13dp" />

                        <com.example.work.cartapp.Adapter.MyEditTextMarwen
                            android:id="@+id/CESS_Total"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/background_item"
                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GST Total"
                            android:textSize="13dp" />

                        <com.example.work.cartapp.Adapter.MyEditTextMarwen
                            android:id="@+id/GST_Total"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/background_item"
                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gross Value"
                            android:textSize="13dp" />

                        <com.example.work.cartapp.Adapter.MyEditTextMarwen
                            android:id="@+id/TotalAmount"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/background_item"
                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GrandTotal"
                            android:textSize="13dp" />

                        <com.example.work.cartapp.Adapter.MyEditTextMarwen
                            android:id="@+id/Gradnd_Total"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:background="@drawable/background_item"
                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:textSize="13dp" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/generateinvoice"
                        android:background="#2b8f58"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="GENERATE INVOICE"
                        android:textAllCaps="false"
                        android:textColor="#FFF" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>