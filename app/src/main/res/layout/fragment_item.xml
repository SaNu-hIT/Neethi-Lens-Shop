<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/ic_launcher_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:id="@+id/ItemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:text="Ray-Ban Men Aviator Sunglasses  (Green)"

                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textColor="#000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:id="@+id/Model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:text="0RB3025I00358"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textColor="#181818"
                            android:textSize="12dp" />

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:id="@+id/edtPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:text="â‚¹5,391"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textColor="#020202"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <com.example.work.cartapp.Adapter.MyTextViewMarven
                            android:id="@+id/manufacture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:text="Luxottica Group"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textColor="#333131"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                            android:weightSum="3">


                            <com.example.work.cartapp.Adapter.MyTextViewMarven
                                android:id="@+id/unit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="left"

                                android:text="Unit 11"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textColor="#333131"
                                android:textSize="12dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#f1efef" />

                            <com.example.work.cartapp.Adapter.MyTextViewMarven
                                android:id="@+id/stock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="center"

                                android:text="in stock 1"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textColor="#406031"
                                android:textSize="12dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#f1efef" />

                            <com.example.work.cartapp.Extras.TextAquino
                                android:id="@+id/indicatiorstock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="center"


                                android:text="LOW STOCK"
                                android:textColor="#c94747"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.example.work.cartapp.Adapter.MyTextViewMarven
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Heading"

            android:textAppearance="?attr/textAppearanceListItem"
            android:visibility="gone" />


    </android.support.v7.widget.CardView>


</LinearLayout>
